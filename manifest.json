{
  "name": "Daisy Deal Distributor",
  "version": "0.1",
  "description": "Quickly submit deals to mommy, deal, and coupon blogs.",
  "homepage_url": "http://blachniet.com",
  "manifest_version": 2,

  "icons": {
    "16" : "icon-16.png",
    "48" : "icon-48.png",
    "128" : "icon-128.png"
  },

  "browser_action": {
      "default_title": "Daisy",
      "default_icon": "icon.png",
      "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "permissions": [
    "tabs",
    "storage",
    "http://moneysavingmom.com/*",
    "http://forthemommas.com/*",
    "http://hip2save.com/*",
    "http://www.pennypinchinmom.com/*",
    "http://www.passionforsavings.com/*"
  ]
}
