{
  "name": "Daisy",
  "version": "1.0",
  "description": "Quickly submit deals to mommy, deal, and coupon blogs.",
  "permissions": [
    "tabs",
    "http://moneysavingmom.com/*",
    "http://forthemommas.com/*",
    "http://hip2save.com/*",
    "http://www.pennypinchinmom.com/*",
    "http://www.passionforsavings.com/"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
      "default_title": "Daisy",
      "default_icon": "icon.png",
      "default_popup": "popup.html"
  },
  "manifest_version": 2
}
